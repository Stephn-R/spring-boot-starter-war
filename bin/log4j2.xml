<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>

    <logger name="com.base.starter" level="info" />
    
    <logger name="com.base.starter.api" level="info" />
    <logger name="com.base.starter.api.models" level="info" />
    
    <logger name="com.base.starter.cors" level="info" />

    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
